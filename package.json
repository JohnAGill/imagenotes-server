{
  "name": "imagenotes-server",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "John Gill",
  "main": "app.ts",
  "scripts": {
    "format:js": "npm run prettier -- \"src/**/*.ts\"",
    "lint": "eslint ./src --ext=ts",
    "lint:fix": "eslint ./src --ext=ts, --fix",
    "prettier": "prettier --single-quote --trailing-comma all --print-width 180 --bracket-spacing --write",
    "start": "yarn install && tsc && node dist/app.js",
    "start:local": "tsc && node dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ],
    "src/**/*.ts": [
      "yarn prettier --"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "pg": "^8.0.2",
    "pg-pool": "^3.1.0",
    "pg-promise": "^10.4.4",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "sort-package-json": "^1.41.0",
    "tslint": "^6.1.1"
  }
}
